{
	"manifest_version" : 2,
	"name" : "Minx Scraper",
	"description" : "Create screen-scraping jobs on the fly",
	"version" : "0.1",
	"browser_action" : {
		"default_icon" : "/images/minx_logo_16.png"
	},
	"background" : {
		"scripts" : ["/js/conf.js", "/js/minx_browser.js"]
	},
	"permissions" : [
		"tabs", "http://*/*", "https://*/*",
		"contextMenus"
	]
}